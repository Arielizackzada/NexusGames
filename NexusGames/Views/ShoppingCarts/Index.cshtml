@model NexusGames.Models.ShoppingCart

@{
    ViewData["Title"] = "My Shopping Cart";
}

<div class="container mt-5">
    <div class="d-flex align-items-center mb-4">
        <h1 class="display-5 fw-bold text-primary">Shopping Cart</h1>
        <span class="badge bg-secondary ms-3 fs-5">@Model?.CartItems?.Count Items</span>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check2-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model == null || Model.CartItems == null || !Model.CartItems.Any())
    {
        <div class="text-center py-5 shadow-sm rounded-4 bg-white border">
            <div class="display-1 text-muted mb-3"><i class="bi bi-cart-x"></i></div>
            <h3 class="text-muted">Your cart is empty.</h3>
            <p class="mb-4">Looks like you haven't added any games yet.</p>
            <a asp-controller="Games" asp-action="Index" class="btn btn-primary btn-lg px-5 shadow">Go Shopping!</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="table-responsive shadow-sm rounded-4 bg-white border">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Game</th>
                                <th>Price</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CartItems)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center py-2">
                                            @if (!string.IsNullOrEmpty(item.Game?.imageUrl))
                                            {
                                                <img src="@item.Game.imageUrl" class="rounded shadow-sm me-3" style="width: 70px; height: 45px; object-fit: cover;" />
                                            }
                                            <div>
                                                <div class="fw-bold fs-6">@item.Game?.Name</div>
                                                <small class="text-muted">Digital Edition</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="fw-bold">@item.Game?.Price.ToString("F2") ₪</td>
                                    <td class="text-center">
                                        <form asp-action="RemoveFromCart" method="post">
                                            <input type="hidden" name="cartItemId" value="@item.Id" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3 shadow-sm">
                                                <i class="bi bi-trash3 me-1"></i> Remove
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-4 mb-5">
                    <a asp-controller="Games" asp-action="Index" class="btn btn-outline-primary btn-lg px-4 rounded-pill fw-bold shadow-sm continue-btn">
                        <i class="bi bi-arrow-left-circle me-2"></i> Continue Shopping
                    </a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow rounded-4 sticky-top" style="top: 20px;">
                    <div class="card-body p-4">
                        <h5 class="card-title fw-bold mb-4">Order Summary</h5>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Subtotal</span>
                            <span>@Model.TotalPrice.ToString("F2") ₪</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">Taxes</span>
                            <span>Included</span>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between mb-4 mt-2">
                            <span class="h5 fw-bold">Total:</span>
                            <span class="h5 fw-bold text-success">@Model.TotalPrice.ToString("F2") ₪</span>
                        </div>
                        <button class="btn btn-success btn-lg w-100 rounded-3 shadow py-3 fw-bold">
                            Proceed to Checkout <i class="bi bi-arrow-right ms-2"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .card { transition: transform 0.2s; }
    .table th { border-top: none; }
    
    /* עיצוב כפתור Checkout */
    .btn-success { 
        background: linear-gradient(45deg, #198754, #20c997); 
        border: none; 
    }
    .btn-success:hover { 
        background: linear-gradient(45deg, #157347, #198754); 
        transform: translateY(-2px); 
    }

    /* עיצוב כפתור Continue Shopping החדש */
    .continue-btn {
        border-width: 2px;
        transition: all 0.3s ease;
    }
    .continue-btn:hover {
        transform: translateX(-5px);
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.2) !important;
    }
</style>