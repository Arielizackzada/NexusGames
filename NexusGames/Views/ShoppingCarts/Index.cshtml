@model NexusGames.Models.ShoppingCart

@{
    ViewData["Title"] = "My Shopping Cart";
}

<div class="container mt-5">
    <h1 class="mb-4">Shopping Cart</h1>

    @if (Model == null || Model.CartItems == null || !Model.CartItems.Any())
    {
        <div class="alert alert-info">
            Your cart is empty. <a asp-controller="Games" asp-action="Index">Go shopping!</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Game</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <td>
                                    <strong>@item.Game?.Name</strong>
                                </td>
                                <td>@item.Game?.Price.ToString("F2") ₪</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Order Summary</h5>
                        <hr />
                        <div class="d-flex justify-content-between">
                            <span>Total Items:</span>
                            <span>@Model.CartItems.Count</span>
                        </div>
                        <div class="d-flex justify-content-between mt-2 font-weight-bold">
                            <span>Total Price:</span>
                            <span class="text-success">@Model.TotalPrice.ToString("F2") ₪</span>
                        </div>
                        <button class="btn btn-primary btn-block mt-4 w-100">Checkout</button>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="mt-3">
        <a asp-controller="Games" asp-action="Index" class="btn btn-outline-secondary">Back to Games</a>
    </div>
</div>